INSTALL_DIR=/opt/docker-mysql-s3
WORK_DIR=/tmp

# Mysql options
MYSQL_HOST=${MYSQL_HOST:=localhost}
MYSQL_PORT=${MYSQL_PORT:=3306}
MYSQL_OPTS="-u ${MYSQL_USER} -p${MYSQL_PASSWORD} -h${MYSQL_HOST} -P ${MYSQL_PORT}"
MYSQL_DROP_DB_IF_EXISTS=${MYSQL_DROP_DB_IF_EXISTS:=false}

# S3 options
S3_CMD_OPTS="-c ${INSTALL_DIR}/.s3cfg"
S3_RESTORE_PATH="${S3_BACKUP_BUCKET}/${S3_RESTORE_FILENAME}"

# Color settings for print/echo statements
red=$'\e[1;31m'
green=$'\e[1;32m'
blue=$'\e[1;34m'
end=$'\e[0m'
